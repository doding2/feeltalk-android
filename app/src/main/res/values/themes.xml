<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FeeltalkContent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/GradientEditTextStyle</item>
        <item name="bottomSheetDialogTheme">@style/RoundBottomSheetDialogTheme</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationStyle</item>
    </style>


    <!--  Splash Screen for Under Android 12 Version  -->
    <style name="Theme.Feeltalk" parent="Theme.SplashScreen.Common">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/n_logo_feeltalk_splash_empty</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.FeeltalkContent</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" >true</item>
    </style>

    <!--  Custom BottomNavigation  -->
    <style name="CustomBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewActiveTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewInactiveTextStyle</item>
    </style>
    
    <style name="BottomNavigationViewActiveTextStyle">
        <item name="android:textColor">@color/gray_800</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="BottomNavigationViewInactiveTextStyle">
        <item name="android:textColor">@color/gray_500</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!--  Custom EditText  -->
    <style name="GradientTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="GradientEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:background">@drawable/n_background_edit_text_filled</item>
    </style>

    <!--  Custom Bottom Sheet  -->
    <style name="RoundBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="editTextStyle">@style/GradientEditTextStyle</item>
    </style>

    <style name="RoundModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/n_background_bottom_sheet_rounded</item>
    </style>
</resources>