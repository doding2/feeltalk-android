<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/total_nav_graph">

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.clonect.feeltalk.presentation.ui.signup.SignUpFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_logInFragment_to_bottomNavigationFragment"
            app:destination="@id/bottomNavigationFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_logInFragment_to_coupleRegistrationFragment"
            app:destination="@id/coupleRegistrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/bottomNavigationFragment"
        android:name="com.clonect.feeltalk.presentation.ui.bottom_navigation.BottomNavigationFragment"
        android:label="fragment_bottom_navigation"
        tools:layout="@layout/fragment_bottom_navigation" >
        <action
            android:id="@+id/action_bottomNavigationFragment_to_todayQuestionFragment"
            app:destination="@id/todayQuestionFragment" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_coupleSettingFragment"
            app:destination="@id/coupleSettingFragment" />
    </fragment>
    <fragment
        android:id="@+id/todayQuestionFragment"
        android:name="com.clonect.feeltalk.presentation.ui.today_question.TodayQuestionFragment"
        android:label="fragment_today_question"
        tools:layout="@layout/fragment_today_question" >
        <argument
            android:name="selectedQuestion"
            app:argType="com.clonect.feeltalk.domain.model.question.Question"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_todayQuestionFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:popUpTo="@id/todayQuestionFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.clonect.feeltalk.presentation.ui.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <argument
            android:name="selectedQuestion"
            app:argType="com.clonect.feeltalk.domain.model.question.Question"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.clonect.feeltalk.presentation.ui.news.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/coupleSettingFragment"
        android:name="com.clonect.feeltalk.presentation.ui.couple_setting.CoupleSettingFragment"
        android:label="fragment_couple_setting"
        tools:layout="@layout/fragment_couple_setting" />
    <fragment
        android:id="@+id/coupleRegistrationFragment"
        android:name="com.clonect.feeltalk.presentation.ui.couple_registration.CoupleRegistrationFragment"
        android:label="fragment_couple_registration"
        tools:layout="@layout/fragment_couple_registration" >
        <action
            android:id="@+id/action_coupleRegistrationFragment_to_bottomNavigationFragment"
            app:destination="@id/bottomNavigationFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>