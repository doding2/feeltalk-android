<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <padding
                android:bottom="4dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/main_500" />
            <solid android:color="@color/white" />
            <padding
                android:bottom="16dp"
                android:left="12dp"
                android:right="12dp"
                android:top="16dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>