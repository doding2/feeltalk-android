<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/system_white"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_confirm_title"
            android:textSize="20sp"
            android:textColor="@color/system_black"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16sp"
            android:text="@string/answer_confirm_message"
            android:textSize="14sp"
            android:textColor="@color/system_black"
            android:fontFamily="@font/pretendard_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_cancel"
                android:layout_width="140.5dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/system_white"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/system_black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_gravity="center"
                    android:text="@string/answer_confirm_cancel"
                    android:textColor="@color/system_black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_confirm"
                android:layout_width="140.5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/system_black"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_gravity="center"
                    android:text="@string/answer_confirm_confirm"
                    android:textColor="@color/system_white"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>