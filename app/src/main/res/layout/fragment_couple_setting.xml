<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_background_color"
    tools:context=".presentation.ui.couple_setting.CoupleSettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_half_arrow_left"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_logo"
            app:layout_constraintHorizontal_bias="0"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="21dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo_feeltalk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="@string/couple_setting_start_date_subtitle"
                    android:textColor="@color/couple_setting_start_date_subtitle_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_couple_anniversary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/pretendard_medium"
                            android:imeOptions="actionDone"
                            android:inputType="date"
                            android:textColor="@color/start_date_color"
                            android:textSize="14sp"
                            app:mask="____. __. __"
                            app:maskCharacter="_"
                            app:maskStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/pretendard_light"
                            android:text="@string/setting_d_day_prefix"
                            android:textColor="@color/main"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_d_day_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_light"
                            android:textColor="@color/main"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_light"
                            android:text="@string/setting_d_day_suffix"
                            android:textColor="@color/main"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_my_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="21dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="157dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_my_profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/image_my_default_profile" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="21dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_bold"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="2"
                    android:text="@string/news_default_my_name"
                    android:textColor="@color/item_news_content_color"
                    android:textSize="20sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/cv_my_profile"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_my_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_light"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="2"
                    android:text="@string/news_default_email"
                    android:textColor="@color/item_news_date_color"
                    android:textSize="12sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/cv_my_profile"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_name" />

                <TextView
                    android:id="@+id/tv_my_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="21dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_light"
                    android:maxLines="1"
                    android:text="@string/couple_setting_default_birth"
                    android:textColor="@color/item_news_date_color"
                    android:textSize="12sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/tv_my_email"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_email" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="21dp"
                    android:background="@color/item_news_border_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_partner_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_partner_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="21dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="157dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_partner_profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/image_partner_default_profile" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_partner_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="21dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_bold"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="2"
                    android:text="@string/news_default_partner_name"
                    android:textColor="@color/item_news_content_color"
                    android:textSize="20sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/cv_partner_profile"
                    app:layout_constraintTop_toTopOf="@id/cl_partner_profile" />

                <TextView
                    android:id="@+id/tv_partner_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_light"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="2"
                    android:text="@string/news_default_email"
                    android:textColor="@color/item_news_date_color"
                    android:textSize="12sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/cv_partner_profile"
                    app:layout_constraintTop_toBottomOf="@id/text_partner_nickname" />

                <TextView
                    android:id="@+id/text_partner_birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="21dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_light"
                    android:maxLines="1"
                    android:text="@string/couple_setting_default_birth"
                    android:textColor="@color/item_news_date_color"
                    android:textSize="12sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/tv_partner_email"
                    app:layout_constraintTop_toBottomOf="@id/tv_partner_email" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="21dp"
                    android:background="@color/item_news_border_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_leave_feeltalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="28dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="회원탈퇴"
                    android:textColor="@color/couple_registration_code_description_color"
                    android:textSize="14sp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/couple_registration_code_description_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>