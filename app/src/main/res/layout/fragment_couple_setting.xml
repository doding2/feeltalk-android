<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.couple_setting.CoupleSettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_half_arrow_left"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_logo"
            app:layout_constraintHorizontal_bias="0"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="21dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo_feeltalk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/couple_setting_start_date_subtitle"
                    android:textSize="18sp"
                    android:textColor="@color/couple_setting_start_date_subtitle_color"
                    android:fontFamily="@font/pretendard_bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="21dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/text_couple_anniversary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/start_date_default_text"
                            android:textSize="14sp"
                            android:textColor="@color/start_date_color"
                            android:fontFamily="@font/pretendard_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_d_day_prefix"
                            android:textSize="14sp"
                            android:textColor="@color/main"
                            android:fontFamily="@font/pretendard_light"
                            android:layout_marginStart="3dp"/>

                        <TextView
                            android:id="@+id/text_d_day_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_d_day_default_text"
                            android:textSize="14sp"
                            android:textColor="@color/main"
                            android:fontFamily="@font/pretendard_light"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_d_day_suffix"
                            android:textSize="14sp"
                            android:textColor="@color/main"
                            android:fontFamily="@font/pretendard_light"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_my_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="21dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="157dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/iv_my_profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/image_my_default_profile"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/news_default_my_name"
                    android:textColor="@color/item_news_content_color"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:lineSpacingExtra="2sp"
                    app:layout_constraintStart_toEndOf="@id/cv_my_profile"
                    app:layout_constraintTop_toTopOf="@id/cv_my_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constrainedWidth="true"/>

                <TextView
                    android:id="@+id/text_my_birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="21dp"
                    android:layout_marginVertical="8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/news_default_date"
                    android:textColor="@color/item_news_date_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_light"
                    app:layout_constraintStart_toStartOf="@id/text_my_name"
                    app:layout_constraintTop_toBottomOf="@id/text_my_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constrainedWidth="true"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/item_news_border_color"
                    android:layout_marginHorizontal="21dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_partner_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="21dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="157dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/iv_partner_profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/image_partner_default_profile"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_partner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/news_default_partner_name"
                    android:textColor="@color/item_news_content_color"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:lineSpacingExtra="2sp"
                    app:layout_constraintStart_toEndOf="@id/cv_partner_profile"
                    app:layout_constraintTop_toTopOf="@id/cv_partner_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constrainedWidth="true"/>

                <TextView
                    android:id="@+id/text_partner_birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="21dp"
                    android:layout_marginVertical="8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/news_default_date"
                    android:textColor="@color/item_news_date_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_light"
                    app:layout_constraintStart_toStartOf="@id/text_partner_name"
                    app:layout_constraintTop_toBottomOf="@id/text_partner_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constrainedWidth="true"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/item_news_border_color"
                    android:layout_marginHorizontal="21dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>