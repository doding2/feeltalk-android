<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_background_color"
    tools:context=".presentation.ui.couple_registration.CoupleRegistrationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_half_arrow_left"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_title"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/couple_registration_title"
            android:textColor="@color/today_question_title_color"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="21dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/couple_registration_message_prefix"
                    android:textSize="22sp"
                    android:textColor="@color/couple_registration_message_color"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:id="@+id/text_message_highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/couple_registration_message_highlight"
                    android:textSize="22sp"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/couple_registration_message_suffix"
                    android:textSize="22sp"
                    android:textColor="@color/couple_registration_message_color"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/couple_registration_code_description"
                android:textSize="13sp"
                android:textColor="@color/couple_registration_code_description_color"
                android:fontFamily="@font/pretendard_regular"/>

            <TextView
                android:id="@+id/text_my_couple_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:text="FPFK41E"
                android:textSize="30sp"
                android:fontFamily="@font/pretendard_bold"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_copy_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardElevation="0dp"
                app:cardCornerRadius="20sp"
                app:cardBackgroundColor="@color/couple_registration_code_copy_background"
                app:strokeColor="@color/couple_registration_code_copy_border_color"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="10dp"
                    android:text="@string/couple_registration_code_copy"
                    android:textSize="13sp"
                    android:textColor="@color/couple_registration_code_copy_text_color"
                    android:fontFamily="@font/pretendard_medium"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="21dp"
                android:text="@string/couple_registration_partner_code_input_hint"
                android:textSize="11sp"
                android:textColor="@color/couple_registration_code_partner_code_input_hint_color"
                android:fontFamily="@font/pretendard_regular"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp">

                <EditText
                    android:id="@+id/et_partner_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/couple_registration_code_partner_code_input_text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lines="1"
                    android:inputType="textPersonName"
                    android:drawablePadding="4dp"
                    android:paddingEnd="4dp"/>
            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_leave_feeltalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="46dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="회원탈퇴"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/couple_registration_code_description_color"/>

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/couple_registration_code_description_color"/>
            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="@color/today_question_enter_answer_button_enabled_color"
                app:cardCornerRadius="500dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:layout_gravity="center"
                    android:text="@string/couple_registration_next_button"
                    android:textSize="16sp"
                    android:textColor="@color/today_question_enter_answer_button_text_color"
                    android:fontFamily="@font/pretendard_bold"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>