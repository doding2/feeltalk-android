<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="30dp"
    android:layout_marginVertical="8dp"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_partner_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_partner_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:id="@+id/iv_partner_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_400"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_partner_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:text="UserName"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_chat_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/gray_100"
                app:cardElevation="0dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/tv_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="12dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/n_ic_question_chat_deco"/>

                    <TextView
                        android:id="@+id/tv_question_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q. 난 이게 가장 좋더라!"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_regular"/>


                    <TextView
                        android:id="@+id/tv_question_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당신이 가장 좋아하는 스킨십은?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_regular"/>

                    <TextView
                        android:id="@+id/tv_question_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="2023.06.01"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="@string/question_chat_partner_answer"
                                android:textSize="12sp"
                                android:textColor="@color/gray_600"
                                android:fontFamily="@font/pretendard_regular"/>

                            <TextView
                                android:id="@+id/tv_partner_answer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minLines="4"
                                android:minEms="12"
                                android:maxEms="12"
                                android:text="가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면....."
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/pretendard_regular"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="@string/question_chat_my_answer"
                                android:textSize="12sp"
                                android:textColor="@color/gray_600"
                                android:fontFamily="@font/pretendard_regular"/>

                            <TextView
                                android:id="@+id/tv_my_answer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minLines="4"
                                android:minEms="12"
                                android:maxEms="12"
                                android:text="가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면....."
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/pretendard_regular"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/gray_600"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_unread"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/gray_600"
                android:lines="1"
                app:layout_constraintBottom_toTopOf="@id/tv_time"
                app:layout_constraintStart_toStartOf="@id/tv_time"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
