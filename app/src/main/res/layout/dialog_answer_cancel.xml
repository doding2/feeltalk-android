<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:clipChildren="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_cancel_title"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:text="@string/answer_cancel_message"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipChildren="false">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_cancel"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                app:rippleColor="@color/gray_200">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_gravity="center"
                    android:text="@string/answer_cancel_cancel"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_confirm"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/black"
                app:cardElevation="0dp"
                app:rippleColor="@color/system_alert">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_gravity="center"
                    android:text="@string/answer_cancel_confirm"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>