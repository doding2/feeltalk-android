<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="30dp"
    android:layout_marginVertical="8dp"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_partner_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_partner_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:id="@+id/iv_partner_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_400"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_partner_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:text="UserName"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="-0.01"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_chat_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/gray_100"
                app:cardElevation="0dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/tv_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="28dp"
                        android:gravity="center"
                        android:text="@string/signal_chat_title"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:lineSpacingExtra="5dp"
                        android:letterSpacing="-0.01"/>

                    <ImageView
                        android:id="@+id/iv_signal"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="60dp"
                        android:src="@drawable/n_image_signal_100"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_signal_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center_horizontal"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="17dp"
                        app:strokeColor="@color/signal_100"
                        app:strokeWidth="1dp">

                        <TextView
                            android:id="@+id/tv_signal_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="11.5dp"
                            android:text="@string/signal_chat_percent_100"
                            android:textColor="@color/signal_100"
                            android:textSize="12sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="4dp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_signal_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/signal_subtitle_100"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="00:00"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/gray_600"
                android:lines="1"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="-0.01"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_unread"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/gray_600"
                android:lines="1"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="-0.01"
                app:layout_constraintBottom_toTopOf="@id/tv_time"
                app:layout_constraintStart_toStartOf="@id/tv_time"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
