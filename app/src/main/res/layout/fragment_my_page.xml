<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".new_presentation.ui.mainNavigation.myPage.MyPageFragment">

    <LinearLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/gray_100"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_vertical"
            android:text="@string/my_page_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_medium"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"
            android:letterSpacing="-0.01"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                android:outlineAmbientShadowColor="@color/gray_100"
                android:outlineSpotShadowColor="@color/gray_100"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                app:cardBackgroundColor="@color/white"
                                app:strokeColor="@color/gray_100"
                                app:strokeWidth="2.53dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="52dp">

                                <ImageView
                                    android:id="@+id/iv_profile_image"
                                    android:layout_width="86dp"
                                    android:layout_height="86dp"
                                    android:src="@color/gray_300"/>
                            </com.google.android.material.card.MaterialCardView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/n_ic_edit_profile"
                                android:layout_gravity="end|bottom"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:text="nickname"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:ellipsize="end"
                            android:lines="1"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="6dp"
                            android:letterSpacing="-0.01"/>

                        <ImageView
                            android:id="@+id/iv_sns_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/n_ic_setting_sns_kakao"/>
                    </LinearLayout>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/main_100"
                        app:cardCornerRadius="12dp"
                        app:strokeColor="@color/main_300"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp">

                            <TextView
                                android:id="@+id/tv_partner_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4.5dp"
                                android:layout_marginStart="16dp"
                                android:text="@string/my_page_partner_setting_title"
                                android:textSize="12sp"
                                android:textColor="@color/main_500"
                                android:fontFamily="@font/pretendard_semi_bold"
                                app:layout_constraintTop_toTopOf="@id/iv_partner_setting_next"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:src="@drawable/n_ic_partner_setting"
                                app:layout_constraintTop_toTopOf="@id/tv_partner_setting"
                                app:layout_constraintBottom_toBottomOf="@id/tv_partner_setting"
                                app:layout_constraintStart_toEndOf="@id/tv_partner_setting"/>

                            <TextView
                                android:id="@+id/tv_partner_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4.5dp"
                                android:text="UserNickname"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/pretendard_medium"
                                android:maxLength="10"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintStart_toStartOf="@id/tv_partner_setting"
                                app:layout_constraintBottom_toBottomOf="@id/iv_partner_setting_next"/>

                            <TextView
                                android:id="@+id/tv_partner_nickname_deco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_page_partner_setting_nickname_deco"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/pretendard_regular"
                                app:layout_constraintStart_toEndOf="@id/tv_partner_nickname"
                                app:layout_constraintBottom_toBottomOf="@id/tv_partner_nickname"/>

                            <ImageView
                                android:id="@+id/iv_partner_setting_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:src="@drawable/n_ic_partner_setting_next"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:id="@+id/ll_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?android:selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginVertical="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/n_ic_setting"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/my_page_setting"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="5dp"
                            android:letterSpacing="-0.01"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_inquire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?android:selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginVertical="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/n_ic_inquire"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/my_page_inquire"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="5dp"
                            android:letterSpacing="-0.01"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_suggest_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?android:selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginVertical="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/n_ic_suggest_question"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/my_page_suggest_question"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="5dp"
                            android:letterSpacing="-0.01"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>