<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".new_presentation.ui.mainNavigation.challenge.addChallenge.AddChallengeFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/n_ic_exit"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:layout_marginVertical="6dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:nestedScrollingEnabled="true"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/mcv_add_square"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/add_challenge_title_1"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="32dp"
                    android:text="@string/add_challenge_title_2"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"/>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="12dp">

                        <ImageView
                            android:id="@+id/iv_category"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/gray_400"/>

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pretendard_regular"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/add_challenge_title"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    style="@style/GradientTextInputLayout">

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:paddingStart="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textCursorDrawable="@drawable/edit_text_cursor"
                        android:background="@drawable/n_background_edit_text_answer"
                        android:hint="@string/add_challenge_title_hint"
                        android:textColorHint="@color/gray_400"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:lines="1"
                        android:inputType="text"
                        android:imeOptions="flagNavigateNext" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/add_challenge_deadline"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="85dp"
                        android:minHeight="59dp"
                        android:layout_marginStart="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/main_300"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_d_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/add_challenge_d_day_today"
                            android:textSize="18sp"
                            android:textColor="@color/main_500"
                            android:fontFamily="@font/pretendard_medium"
                            android:lines="1"
                            android:ellipsize="marquee"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="12dp"
                        app:rippleColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/gray_200"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/main_500">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_deadline"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="12dp"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/iv_calendar"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="6dp"
                                android:padding="12dp"
                                android:src="@drawable/n_ic_calendar"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/add_challenge_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <EditText
                    android:id="@+id/et_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="top"
                    android:background="@drawable/n_background_edit_text_answer"
                    android:hint="@string/add_challenge_body_hint"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:minLines="4"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"/>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="59dp" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_add_square"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            app:layout_constraintBottom_toTopOf="@id/dp_deadline_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_add_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_challenge_button"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_add_round"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_add_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_challenge_button"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>

        <DatePicker
            android:id="@+id/dp_deadline_picker"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:visibility="gone"
            android:background="@color/gray_400"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:nestedScrollingEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>