<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".new_presentation.ui.mainNavigation.addChallenge.AddChallengeFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/n_ic_exit"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="14dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:nestedScrollingEnabled="true"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/mcv_add_square"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/add_challenge_title_1"
                    android:textSize="24sp"
                    android:textColor="@color/system_black"
                    android:fontFamily="@font/pretendard_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginBottom="26dp"
                    android:text="@string/add_challenge_title_2"
                    android:textSize="24sp"
                    android:textColor="@color/system_black"
                    android:fontFamily="@font/pretendard_regular"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="19dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/gray_200"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/iv_category"
                            android:layout_width="59dp"
                            android:layout_height="59dp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:hint="@string/add_challenge_title_hint"
                        android:textColorHint="@color/gray_400"
                        android:textColor="@color/system_black"
                        android:textSize="18sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:lines="1"
                        android:inputType="text"
                        android:imeOptions="flagNavigateNext"/>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="19dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/system_white"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/gray_400">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_deadline"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:textColor="@color/system_black"
                            android:textSize="18sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="center_vertical"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_calendar"/>

                        <ImageView
                            android:id="@+id/iv_calendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="6dp"
                            android:src="@drawable/n_ic_calendar"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <EditText
                    android:id="@+id/et_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19dp"
                    android:gravity="top"
                    android:hint="@string/add_challenge_body_hint"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/system_black"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:minLines="4"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"/>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="59dp" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_add_square"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_challenge_button"
                android:textColor="@color/system_white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_add_round"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_challenge_button"
                android:textColor="@color/system_white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>

        <DatePicker
            android:id="@+id/dp_deadline_picker"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:visibility="gone"
            android:background="@color/gray_300"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:nestedScrollingEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>