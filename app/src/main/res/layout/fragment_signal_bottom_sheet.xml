<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".new_presentation.ui.main_navigation.signal.SignalBottomSheetFragment">

    <include layout="@layout/image_view_bottom_sheet_handle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:text="@string/signal_title"
        android:textSize="20sp"
        android:textColor="@color/system_black"
        android:fontFamily="@font/pretendard_medium" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="46dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/gray_300"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_selected_signal"
            android:layout_width="116dp"
            android:layout_height="116dp"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="21dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/image_view_signal_seduce"
                android:id="@+id/layout_seduce"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_passion"
                app:layout_constraintDimensionRatio="V, 100:118"/>

            <include layout="@layout/image_view_signal_passion"
                android:id="@+id/layout_passion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_seduce"
                app:layout_constraintEnd_toStartOf="@id/layout_skinship"
                app:layout_constraintDimensionRatio="V, 100:118"/>

            <include layout="@layout/image_view_signal_skinship"
                android:id="@+id/layout_skinship"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_passion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="V, 100:118"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <include layout="@layout/image_view_signal_puzzling"
                android:id="@+id/layout_puzzling"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_nope"
                app:layout_constraintDimensionRatio="V, 100:118"/>

            <include layout="@layout/image_view_signal_nope"
                android:id="@+id/layout_nope"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_puzzling"
                app:layout_constraintEnd_toStartOf="@id/layout_tired"
                app:layout_constraintDimensionRatio="V, 100:118"/>

            <include layout="@layout/image_view_signal_tired"
                android:id="@+id/layout_tired"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_nope"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="V, 100:118"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_send_signal"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/main_400"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/signal_send_button"
            android:textColor="@color/system_white"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>