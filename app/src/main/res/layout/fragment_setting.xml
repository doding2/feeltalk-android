<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.setting.SettingFragment">

    <!--  App Logo and Another setting button  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:fontFamily="@font/fredoka_one_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btn_another_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingVertical="18dp"
            android:paddingHorizontal="20dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--  Setting Contents  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!--  Profile Image  -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="175dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="157dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/iv_my_profile"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/test_profile_1"/>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/iv_profile_heart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_profile_heart"
                    android:layout_gravity="bottom|center_horizontal"/>
            </FrameLayout>

            <!--  Profile Name  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:clipToPadding="false">

                <TextView
                    android:id="@+id/text_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:text="@string/my_profile_default_name"
                    android:textColor="@color/profile_name_text_color"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:lines="1"
                    android:ellipsize="end"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/iv_half_arrow_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="2dp"
                    android:src="@drawable/ic_gradient_half_arrow_right"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/text_my_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  Profile D-day  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/text_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_date_default_text"
                    android:textSize="14sp"
                    android:textColor="@color/start_date_color"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_d_day_prefix"
                    android:textSize="14sp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/pretendard_light"
                    android:layout_marginStart="3dp"/>

                <TextView
                    android:id="@+id/text_d_day_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_d_day_default_text"
                    android:textSize="14sp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/pretendard_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_d_day_suffix"
                    android:textSize="14sp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/pretendard_light"/>
            </LinearLayout>


            <!--  Spacer  -->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/setting_spacer_color"
                android:layout_marginVertical="10dp"
                android:alpha="0.1"/>


            <!--  Notification Settings  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/setting_notification_header_title"
                android:textColor="@color/setting_header_title_color"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_bold"/>

            <LinearLayout
                android:id="@+id/layout_push_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="21dp"
                    android:gravity="center_vertical"
                    android:text="@string/setting_push_notification"
                    android:textColor="@color/setting_component_text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_push_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:kswThumbDrawable="@drawable/ic_switch_thumb_off"
                    app:kswThumbWidth="40dp"
                    app:kswThumbHeight="40dp"
                    app:kswThumbRangeRatio="1.5"
                    app:kswThumbMarginTop="-7dp"
                    app:kswThumbMarginBottom="-7dp"
                    app:kswThumbMarginLeft="-6dp"
                    app:kswThumbMarginRight="-6dp"
                    app:kswBackDrawable="@drawable/ic_switch_track"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_usage_info_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="21dp"
                    android:gravity="center_vertical"
                    android:text="@string/setting_usage_info_notification"
                    android:textColor="@color/setting_component_text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_usage_info_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:kswThumbDrawable="@drawable/ic_switch_thumb_off"
                    app:kswThumbWidth="40dp"
                    app:kswThumbHeight="40dp"
                    app:kswThumbRangeRatio="1.5"
                    app:kswThumbMarginTop="-7dp"
                    app:kswThumbMarginBottom="-7dp"
                    app:kswThumbMarginLeft="-6dp"
                    app:kswThumbMarginRight="-6dp"
                    app:kswBackDrawable="@drawable/ic_switch_track"/>
            </LinearLayout>

            <!--  Spacer  -->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/setting_spacer_color"
                android:layout_marginVertical="10dp"
                android:alpha="0.1"/>

            <!--  Customer Service  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/setting_customer_service_header_title"
                android:textColor="@color/setting_header_title_color"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_bold"/>

            <LinearLayout
                android:id="@+id/layout_customer_question_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="21dp"
                    android:gravity="center_vertical"
                    android:text="@string/setting_customer_question_service"
                    android:textColor="@color/setting_component_text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gradient_half_arrow_right"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_customer_feedback_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="21dp"
                    android:gravity="center_vertical"
                    android:text="@string/setting_customer_feedback_service"
                    android:textColor="@color/setting_component_text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gradient_half_arrow_right"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>