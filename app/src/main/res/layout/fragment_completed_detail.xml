<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".new_presentation.ui.mainNavigation.challenge.addChallenge.AddChallengeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="6dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n_ic_exit"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="12dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n_ic_delete_challenge"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="12dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:nestedScrollingEnabled="true"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/challenge_detail_title_1"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_regular"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="7dp"
                    android:letterSpacing="-0.01"/>

                <TextView
                    android:id="@+id/tv_detail_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="32dp"
                    android:paddingTop="7dp"
                    android:text="@string/challenge_detail_title_2"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="7dp"
                    android:letterSpacing="-0.01"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="4dp"
                    android:paddingHorizontal="4dp"
                    android:text="@string/add_challenge_title"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@color/main_500">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:animateLayoutChanges="true">

                        <EditText
                            android:id="@+id/et_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="16dp"
                            android:textCursorDrawable="@drawable/edit_text_cursor"
                            android:background="@null"
                            android:hint="@string/add_challenge_title_hint"
                            android:textColorHint="@color/gray_400"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:lines="1"
                            android:inputType="text"
                            android:imeOptions="flagNavigateNext"
                            android:maxLength="20"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="5dp"
                            android:letterSpacing="-0.01"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ll_num_title"/>

                        <LinearLayout
                            android:id="@+id/ll_num_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_num_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_challenge_default_num_title"
                                android:textColor="@color/gray_600"
                                android:textSize="13sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="4dp"
                                android:letterSpacing="-0.01"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_challenge_max_num_title"
                                android:textColor="@color/gray_400"
                                android:textSize="13sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="4dp"
                                android:letterSpacing="-0.01"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:paddingHorizontal="4dp"
                    android:text="@string/add_challenge_deadline"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        app:rippleColor="@android:color/transparent"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/gray_200"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/main_500">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_deadline"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="12dp"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="5dp"
                                android:letterSpacing="-0.01"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/iv_calendar"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/iv_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="6dp"
                                android:padding="12dp"
                                android:src="@drawable/n_ic_calendar"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:paddingHorizontal="4dp"
                    android:text="@string/add_challenge_content"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:strokeColor="@color/main_500"
                    app:strokeWidth="0dp">

                    <FrameLayout
                        android:id="@+id/ll_num_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:paddingHorizontal="12dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="46dp"
                            android:textCursorDrawable="@color/gray_400"
                            android:background="@null"
                            android:hint="@string/add_challenge_body_hint"
                            android:textColorHint="@color/gray_400"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:lines="4"
                            android:inputType="textMultiLine"
                            android:maxLength="100"
                            android:scrollbars="vertical"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="5dp"
                            android:letterSpacing="-0.01"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:gravity="bottom|end"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:id="@+id/tv_num_body"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_challenge_default_num_body"
                                android:textColor="@color/gray_600"
                                android:textSize="13sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="4dp"
                                android:letterSpacing="-0.01"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_challenge_max_num_body"
                                android:textColor="@color/gray_400"
                                android:textSize="13sp"
                                android:fontFamily="@font/pretendard_regular"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="4dp"
                                android:letterSpacing="-0.01"/>
                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="59dp" />
            </LinearLayout>
        </ScrollView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_complete_round"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/gray_300"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_complete_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/challenge_detail_completed"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="-0.01"/>
        </com.google.android.material.card.MaterialCardView>

        <DatePicker
            android:id="@+id/dp_deadline_picker"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:visibility="gone"
            android:background="@color/gray_400"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:nestedScrollingEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>