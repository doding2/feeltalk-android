<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".release_presentation.ui.signUpNavigation.nickname.NicknameFragment">

    <LinearLayout
        android:id="@+id/ll_clear_focus_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/nickname_title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="4dp"
            android:text="@string/nickname_alert"
            android:textSize="16sp"
            android:textColor="@color/gray_600"
            android:fontFamily="@font/pretendard_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/nickname_edit_text_label"
            android:textSize="12sp"
            android:textColor="@color/black" />

<!--        <EditText-->
<!--            android:id="@+id/et_nickname"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginHorizontal="20dp"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="16sp"-->
<!--            android:fontFamily="@font/pretendard_regular"-->
<!--            android:hint="@string/nickname_edit_text_hint"-->
<!--            android:textColorHint="@color/gray_400"-->
<!--            android:lines="1"-->
<!--            android:inputType="text"-->
<!--            android:imeOptions="actionDone" />-->


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/gray_200"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/main_500">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:animateLayoutChanges="true">

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="16dp"
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:background="@null"
                    android:hint="@string/nickname_edit_text_hint"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lines="1"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="5dp"
                    android:letterSpacing="-0.01"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_num_nickname"/>

                <LinearLayout
                    android:id="@+id/ll_num_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_nickname_clear"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_num_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nickname_default_num"
                        android:textColor="@color/gray_600"
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="-0.01"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nickname_max_num"
                        android:textColor="@color/gray_400"
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="-0.01"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_nickname_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingEnd="4dp"
                    android:src="@drawable/n_ic_clear"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_nickname_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="6dp"
            android:text="@string/nickname_warning_1"
            android:textColor="@color/system_error"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>
    </LinearLayout>


    <View
        android:id="@+id/view_clear_focus_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_next"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="20dp"
        android:clickable="false"
        android:focusable="false"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:rippleColor="@android:color/transparent">

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/n_background_button_main"
            android:text="@string/sign_up_next_button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_medium"/>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>