<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    tools:context=".new_presentation.ui.signUp.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginHorizontal="48dp"
            android:background="@color/gray_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_slogan_1"
            app:layout_constraintVertical_bias="0.6939"/>

        <TextView
            android:id="@+id/tv_slogan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_slogan_1"
            android:layout_marginHorizontal="48dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintBottom_toTopOf="@id/tv_slogan_2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_slogan_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_slogan_2"
            android:layout_marginStart="48dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_sign_up_bubble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.8265"/>

        <TextView
            android:id="@+id/tv_slogan_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/sign_up_slogan_3"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toTopOf="@id/tv_slogan_2"
            app:layout_constraintBottom_toBottomOf="@id/tv_slogan_2"
            app:layout_constraintStart_toEndOf="@id/tv_slogan_2"/>



        <!--  Kakao sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_kakao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="4dp"
            android:layout_gravity="center"
            app:rippleColor="@color/gray_200"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_300"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_google">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginVertical="17.5dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/n_image_kakao"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kakao"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--  Google sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="4dp"
            android:layout_gravity="center"
            app:rippleColor="@color/gray_200"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_300"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_naver">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginVertical="17.5dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/n_image_google"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_google"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--  Naver sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_naver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="4dp"
            android:layout_gravity="center"
            app:rippleColor="@color/gray_200"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_300"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_apple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginVertical="17.5dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/n_image_naver"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_naver"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--  Apple sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="39dp"
            android:layout_gravity="center"
            app:rippleColor="@color/gray_200"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_300"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_inquire">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginVertical="17.5dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/n_image_apple"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_apple"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_inquire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"
            android:text="@string/sign_up_inquire"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_600"
            app:layout_constraintStart_toStartOf="@id/tv_inquire"
            app:layout_constraintEnd_toEndOf="@id/tv_inquire"
            app:layout_constraintTop_toBottomOf="@id/tv_inquire"/>



        <ImageView
            android:id="@+id/iv_sign_up_bubble"
            android:layout_width="120dp"
            android:layout_height="41dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="-5dp"
            android:src="@drawable/n_image_sign_up_bubble"
            app:layout_constraintStart_toStartOf="@id/mcv_sign_up_kakao"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_kakao"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
