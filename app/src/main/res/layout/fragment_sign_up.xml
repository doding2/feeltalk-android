<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    tools:context=".presentation.ui.sign_up.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_kakao"
            app:layout_constraintVertical_bias="0.624">

            <ImageView
                android:layout_width="209dp"
                android:layout_height="67dp"
                android:src="@drawable/logo_feeltalk" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.85dp"
                android:src="@drawable/logo_subscript"/>
        </LinearLayout>


        <!--  Kakao sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_kakao"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/sign_up_kakao_background"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_naver">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kakao"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/sign_up_kakao_text_color"
                    android:alpha="0.1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_kakao"
                    android:textSize="15sp"
                    android:textColor="@color/sign_up_kakao_text_color"
                    android:fontFamily="@font/pretendard_bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--  Naver sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_naver"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/sign_up_naver_background"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_google">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_naver"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/sign_up_naver_text_color"
                    android:alpha="0.1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_naver"
                    android:textSize="15sp"
                    android:textColor="@color/sign_up_naver_text_color"
                    android:fontFamily="@font/pretendard_bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--  Google sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_google"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/sign_up_google_background"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mcv_sign_up_apple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_google"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/sign_up_google_text_color"
                    android:alpha="0.1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_google"
                    android:textSize="15sp"
                    android:textColor="@color/sign_up_naver_text_color"
                    android:fontFamily="@font/pretendard_bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--  Apple sign up button  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_sign_up_apple"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/sign_up_apple_background"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_customer_service">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_apple"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/sign_up_apple_text_color"
                    android:alpha="0.1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_apple"
                    android:textSize="15sp"
                    android:textColor="@color/sign_up_apple_text_color"
                    android:fontFamily="@font/pretendard_bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center"
            android:text="@string/sign_up_customer_service"
            android:textColor="@color/sign_up_customer_service_text_color"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_light"
            android:alpha="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
