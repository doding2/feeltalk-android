<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:elevation="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_vertical"
            android:text="UserName"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_medium"
            android:lines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"
            android:letterSpacing="-0.01"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_contents_share"
            app:layout_constraintHorizontal_bias="0"/>

        <ImageView
            android:id="@+id/iv_contents_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/n_ic_chat_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/cl_top_bar"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:background="@color/white"
        android:animateLayoutChanges="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_expansion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginVertical="9dp"
                android:layout_gravity="bottom"
                android:src="@drawable/n_ic_chat_expansion"/>

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginVertical="9dp"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:src="@drawable/n_ic_chat_cancel"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_default_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginVertical="9dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/gray_100"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_text_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/pretendard_regular"
                        android:maxLines="3"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="5dp"
                        android:letterSpacing="-0.01"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view_focused_spacer"
                        app:layout_constraintHorizontal_bias="0"/>

                    <View
                        android:id="@+id/view_focused_spacer"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_send_text_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="12dp"
                        android:src="@drawable/n_ic_send_text_chat"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_setup_voice_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:src="@drawable/n_ic_voice_chat"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_voice_setup_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/main_300"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/main_500"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/et_voice_guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp"
                        android:paddingStart="12dp"
                        android:text="@string/chat_voice_guide"
                        android:textSize="14sp"
                        android:textColor="@color/main_500"
                        android:fontFamily="@font/pretendard_regular"
                        android:maxLines="1"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="-0.01"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/iv_start_voice_recording"
                        app:layout_constraintHorizontal_bias="0"/>

                    <ImageView
                        android:id="@+id/iv_start_voice_recording"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/n_ic_start_voice_recording"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_voice_recording_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="9dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/main_500"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.clonect.feeltalk.new_presentation.ui.mainNavigation.chatNavigation.chat.audioVisualizer.VisualizerView
                        android:id="@+id/vv_voice_visualizer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="18dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/main_500"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_record_time"
                        app:layout_constraintHorizontal_bias="0"/>


                    <ImageView
                        android:id="@+id/iv_replay_voice_recording"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:background="@color/main_500"
                        android:src="@drawable/n_ic_voice_record_replay"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_pause_replay_voice_recording"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:background="@color/main_500"
                        android:src="@drawable/n_ic_voice_record_replay_pause"
                        app:tint="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tv_record_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:text="@string/chat_voice_record_time_default"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="-0.01"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view_recording_spacer"/>

                    <View
                        android:id="@+id/view_recording_spacer"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_stop_voice_recording"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/n_ic_stop_voice_recording"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_send_voice_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:src="@drawable/n_ic_send_voice_chat"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_media_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:background="@color/gray_100">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="7"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="40">

                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/n_ic_camera"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_camera"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="40">

                <ImageView
                    android:id="@+id/iv_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/n_ic_album"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_album"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="7"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>