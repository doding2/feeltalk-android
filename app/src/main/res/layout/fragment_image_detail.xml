<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".new_presentation.ui.mainNavigation.chatNavigation.imageDetail.ImageDetailFragment">

    <FrameLayout
        android:id="@+id/fl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.otaliastudios.zoom.ZoomLayout
            android:id="@+id/zl_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:minZoom="0.5"
            app:maxZoom="4">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:transformation="centerInside" />
        </com.otaliastudios.zoom.ZoomLayout>

        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            android:orientation="horizontal"
            android:background="@color/black_half_transparent">

            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/n_ic_exit"
                android:padding="12dp"
                app:tint="@color/white"/>

            <ImageView
                android:id="@+id/iv_signal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/n_image_signal_100"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="UserName"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.01"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.01"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_gravity="center"
                android:src="@drawable/n_ic_image_download"
                android:background="?selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>