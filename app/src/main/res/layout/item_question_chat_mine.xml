<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="20dp"
    android:layout_marginVertical="8dp"
    android:clipChildren="false">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_sending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:src="@drawable/n_ic_chat_sending"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mcv_chat_container"/>

        <LinearLayout
            android:id="@+id/ll_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mcv_chat_container">

            <ImageView
                android:id="@+id/iv_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:src="@drawable/n_ic_chat_fail_retry"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="6dp"
                android:src="@drawable/n_ic_chat_fail_divider"/>

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:src="@drawable/n_ic_chat_fail_cancel"
                android:background="?selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_unread"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_600"
            android:lines="1"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="-0.01"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@id/tv_time"
            app:layout_constraintEnd_toEndOf="@id/tv_time"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="00:00"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_600"
            android:lines="1"
            android:lineSpacingExtra="4dp"
            android:letterSpacing="-0.01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_chat_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/gray_100"
            app:cardElevation="0dp"
            app:layout_constraintWidth_max="250dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/tv_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/n_image_question_chat_deco"/>

                <TextView
                    android:id="@+id/tv_question_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q. 난 이게 가장 좋더라!"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>


                <TextView
                    android:id="@+id/tv_question_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="당신이 가장 좋아하는 스킨십은?"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>

                <TextView
                    android:id="@+id/tv_question_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="2023.06.01"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="-0.01"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@string/question_chat_partner_answer"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:fontFamily="@font/pretendard_regular"
                            android:lineSpacingExtra="4dp"
                            android:letterSpacing="-0.01"/>

                        <TextView
                            android:id="@+id/tv_partner_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minLines="4"
                            android:minEms="12"
                            android:maxEms="12"
                            android:text="가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면....."
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="4dp"
                            android:letterSpacing="-0.01"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@string/question_chat_my_answer"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:fontFamily="@font/pretendard_regular"
                            android:lineSpacingExtra="4dp"
                            android:letterSpacing="-0.01"/>

                        <TextView
                            android:id="@+id/tv_my_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minLines="4"
                            android:minEms="12"
                            android:maxEms="12"
                            android:text="가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면.....가장 좋아하는 스킨십이라하면....."
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="4dp"
                            android:letterSpacing="-0.01"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
