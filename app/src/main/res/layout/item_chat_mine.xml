<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="7dp"
    android:gravity="end">

    <LinearLayout
        android:id="@+id/layout_chat_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/mcv_my_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="157dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/iv_my_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/image_my_default_profile"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_my_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_chat_owner_mine"
            android:textColor="@color/item_chat_owner_text_color"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/pretendard_medium"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:padding="10dp"
        android:text="@string/item_chat_default_text"
        android:textColor="@color/item_chat_mine_text_color"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_light"
        android:background="@drawable/background_item_chat_mine"/>

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/item_chat_default_date_text"
        android:textSize="11sp"
        android:textColor="@color/item_chat_date_text_color"
        android:fontFamily="@font/pretendard_regular"/>
</LinearLayout>