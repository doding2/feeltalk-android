<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".new_presentation.ui.mainNavigation.chatNavigation.imageShare.ImageShareFragment">

    <com.otaliastudios.zoom.ZoomLayout
        android:id="@+id/zl_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:minZoom="0.5"
        app:maxZoom="4">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:transformation="centerInside"     />
    </com.otaliastudios.zoom.ZoomLayout>

    <LinearLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@android:style/ThemeOverlay.Material.Dark"
        android:orientation="horizontal"
        android:background="@color/black_half_transparent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/n_ic_back"
            android:padding="12dp"
            app:tint="@color/white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="11dp"
            android:paddingStart="9dp"
            android:paddingEnd="8dp"
            android:layout_marginVertical="6dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/image_share_send"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_medium"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"
            android:letterSpacing="-0.01" />
    </LinearLayout>
</FrameLayout>