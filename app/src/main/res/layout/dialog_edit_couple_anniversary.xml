<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="21dp"
    android:minWidth="300dp"
    android:background="@drawable/background_dialog_round_body">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="13dp"
            android:text="사귄 첫날 변경"
            android:textSize="16sp"
            android:textColor="@color/dialog_title_color"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="13dp"
            android:paddingHorizontal="20dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_invalid_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="11sp"
        android:textColor="@color/user_nickname_input_invalid_warning_color"
        android:fontFamily="@font/pretendard_regular"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"/>

    <com.santalu.maskara.widget.MaskEditText
        android:id="@+id/met_couple_anniversary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="16sp"
        android:textColor="@color/dialog_message_color"
        android:fontFamily="@font/pretendard_light"
        android:layout_gravity="center"
        android:drawablePadding="4dp"
        android:paddingEnd="4dp"
        android:lines="1"
        android:ems="8"
        android:inputType="date"
        android:imeOptions="actionDone"
        app:mask="____/__/__"
        app:maskCharacter="_"
        app:maskStyle="normal"/>


    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="13dp"
        android:gravity="center"
        android:text="확인"
        android:textColor="@color/dialog_confirm_button_text_color"
        android:textSize="16sp"
        android:background="@drawable/background_dialog_gradient_button"/>
</LinearLayout>