<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.home.HomeFragment">

    <!--  App Logo and Notification button  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="21dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo_feeltalk"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="18dp"
            android:paddingHorizontal="20dp"
            android:src="@drawable/ic_notification_unread"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Content without logo -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        
        <LinearLayout
            android:id="@+id/ll_content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:clipChildren="false">

            <View
                android:id="@+id/spacer_top"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!--  D-day Text  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="21dp" >

                    <TextView
                        android:id="@+id/text_d_day_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_d_day_prefix"
                        android:textSize="24sp"
                        android:textColor="@color/d_day_text_color"
                        android:fontFamily="@font/pretendard_thin"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_d_day_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintStart_toEndOf="@id/text_d_day_prefix"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_d_day_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_d_day_unit"
                        android:textSize="24sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintStart_toEndOf="@id/text_d_day_value"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_d_day_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_d_day_suffix"
                        android:textSize="24sp"
                        android:textColor="@color/d_day_text_color"
                        android:fontFamily="@font/pretendard_thin"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintStart_toEndOf="@id/text_d_day_unit"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_d_day_suffix_second_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_d_day_suffix_second_line"
                        android:textSize="24sp"
                        android:textColor="@color/d_day_text_color"
                        android:fontFamily="@font/pretendard_thin"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_d_day_prefix" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--  Emotion  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <!-- My Emotion -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_my_emotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_emotion_heart"
                        android:layout_marginEnd="-17dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="157dp"
                        app:cardBackgroundColor="@color/emotion_happy_color">

                        <ImageView
                            android:id="@+id/iv_my_emotion"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_emotion_happy"/>
                    </androidx.cardview.widget.CardView>

                    <!-- My Emotion Text -->
                    <TextView
                        android:id="@+id/text_my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/home_my_default_name"
                        android:textColor="@color/home_name_text_color"
                        android:textSize="22sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:lines="1"
                        android:ellipsize="end"
                        android:lineSpacingExtra="-2sp"
                        android:shadowDy="15"
                        android:shadowRadius="10"
                        android:shadowColor="@color/home_name_shadow_color"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="@id/cv_my_emotion"
                        app:layout_constraintEnd_toEndOf="@id/cv_my_emotion"
                        app:layout_constraintTop_toBottomOf="@id/cv_my_emotion"/>

                    <!-- Partner Emotion -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_partner_emotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_emotion_heart"
                        android:layout_marginStart="-17dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="157dp"
                        app:cardBackgroundColor="@color/emotion_puzzling_color">

                        <ImageView
                            android:id="@+id/iv_partner_emotion"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_emotion_puzzling"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Partner Emotion Text -->
                    <TextView
                        android:id="@+id/text_partner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/home_partner_default_name"
                        android:textColor="@color/home_name_text_color"
                        android:textSize="22sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:lines="1"
                        android:ellipsize="end"
                        android:lineSpacingExtra="-2sp"
                        android:shadowDy="15"
                        android:shadowRadius="10"
                        android:shadowColor="@color/home_name_shadow_color"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="@id/cv_partner_emotion"
                        app:layout_constraintEnd_toEndOf="@id/cv_partner_emotion"
                        app:layout_constraintTop_toBottomOf="@id/cv_partner_emotion"/>

                    <!-- Emotion Heart -->
                    <ImageView
                        android:id="@+id/iv_emotion_heart"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:src="@drawable/ic_emotion_heart"
                        app:layout_constraintBottom_toBottomOf="@id/cv_my_emotion"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <!--  Today's Question  -->
            <View
                android:id="@+id/spacer_bottom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/layout_today_question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_question_title_text"
                    android:textSize="18sp"
                    android:textColor="@color/home_name_text_color"
                    android:fontFamily="@font/pretendard_bold"
                    android:lineSpacingExtra="13dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gradient_half_arrow_right"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_letter_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_letter_paper"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/background_letter_paper"
                    android:scaleType="fitXY"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="-80dp"/>

                <LinearLayout
                    android:id="@+id/ll_letter_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_marginVertical="40dp">

                    <TextView
                        android:id="@+id/text_letter_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/letter_paper_title_empty"
                        android:textSize="15sp"
                        android:textColor="@color/letter_title_color"
                        android:fontFamily="@font/pretendard_bold"
                        android:lineSpacingExtra="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/letter_paper_message"
                        android:textSize="15sp"
                        android:textColor="@color/letter_title_color"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineSpacingExtra="5dp"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/btn_today_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_question_navigate_button"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>