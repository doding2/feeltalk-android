<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".new_presentation.ui.signUpNavigation.couple_code.CoupleCodeFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="@string/couple_code_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/couple_code_sub_title"
        android:textColor="@color/gray_600"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_code_layout"
        android:layout_width="370dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_title"
        app:layout_constraintBottom_toTopOf="@id/mcv_show_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipChildren="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n_ic_card_1"
            android:layout_marginStart="-55dp"
            android:layout_marginTop="-48dp"
            app:layout_constraintStart_toStartOf="@+id/mcv_code_container"
            app:layout_constraintTop_toTopOf="@+id/mcv_code_container"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n_ic_card_2"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="-76.18dp"
            app:layout_constraintTop_toTopOf="@+id/mcv_code_container"
            app:layout_constraintEnd_toEndOf="@id/mcv_code_container"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n_ic_card_3"
            android:layout_marginTop="-44.64dp"
            android:layout_marginEnd="-43.48dp"
            app:layout_constraintTop_toTopOf="@+id/mcv_code_container"
            app:layout_constraintEnd_toEndOf="@id/mcv_code_container"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_code_container"
            android:layout_width="285dp"
            android:layout_height="357dp"
            android:layout_gravity="center"
            android:clipChildren="false"
            app:cardBackgroundColor="@color/main_500"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/tv_code_invitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="@string/couple_code_invitation"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_couple_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COUPLECODE"
                            android:layout_marginHorizontal="20dp"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/pretendard_medium"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcv_share_couple_code"
                            android:layout_width="79dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/couple_code_share"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:fontFamily="@font/pretendard_regular"/>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/ll_reload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:clipChildren="false">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/n_ic_reload"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:text="@string/couple_code_reload"
                        android:textColor="@color/main_300"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_regular"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

