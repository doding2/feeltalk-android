<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".new_presentation.ui.signUpNavigation.agreement.AgreementFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/agreement_title"
        android:textColor="@color/system_black"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/agreement_sub_title"
        android:textColor="@color/system_black"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_agree_sensitive_info"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sensitive_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n_ic_disabled_check"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_sensitive_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/agreement_sensitive_agree_button"
                android:textSize="18sp"
                android:textColor="@color/system_black"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_sensitive_check"
                app:layout_constraintEnd_toStartOf="@id/iv_more_sensitive_info"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginHorizontal="12dp"/>

            <ImageView
                android:id="@+id/iv_more_sensitive_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n_ic_next_1"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agreement_more_sensitive_info"
            android:textColor="@color/gray_600"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_privacy_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_agree_privacy_info"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_privacy_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n_ic_disabled_check"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_privacy_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/agreement_privacy_agree_button"
                android:textSize="18sp"
                android:textColor="@color/system_black"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_privacy_check"
                app:layout_constraintEnd_toStartOf="@id/iv_more_privacy_info"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginHorizontal="12dp"/>

            <ImageView
                android:id="@+id/iv_more_privacy_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n_ic_next_1"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400"
            android:layout_marginBottom="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/n_ic_disabled_check"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agreement_more_privacy_info"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/n_ic_disabled_check"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agreement_more_privacy_info"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/n_ic_disabled_check"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agreement_more_privacy_info"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/n_ic_disabled_check"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agreement_more_privacy_info"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_next"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/main_400"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:clickable="false"
        android:focusable="false"
        app:rippleColor="@color/main_600">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/sign_up_next_button"
            android:textColor="@color/system_white"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>