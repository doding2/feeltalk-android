<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_clear_focus_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top"
        tools:context=".new_presentation.ui.main_navigation.answer.AnswerBottomSheetFragment">

        <include layout="@layout/image_view_bottom_sheet_handle" />

        <TextView
            android:id="@+id/tv_question_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="난 이게 가장 좋더라!"
            android:textSize="24sp"
            android:textColor="@color/system_black"
            android:fontFamily="@font/pretendard_regular"/>


        <TextView
            android:id="@+id/tv_question_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="당신이 가장 좋아하는 스킨십은?"
            android:textSize="24sp"
            android:textColor="@color/system_black"
            android:fontFamily="@font/pretendard_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:text="@string/answer_my_answer_deco"
            android:textColor="@color/system_black"
            android:fontFamily="@font/pretendard_regular"/>

        <EditText
            android:id="@+id/et_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/answer_my_answer_hint"
            android:textColorHint="@color/gray_400"
            android:textSize="18sp"
            android:textColor="@color/system_black"
            android:lines="4"
            android:gravity="top"
            android:scrollbars="vertical"
            android:imeOptions="actionDone"
            android:nestedScrollingEnabled="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:text="@string/answer_partner_answer_deco"
            android:textColor="@color/system_black"
            android:fontFamily="@font/pretendard_regular"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_partner_answer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray_200"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_partner_answer_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="16dp"
                android:text="@string/answer_partner_answer_state_1"
                android:textColor="@color/main_500"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_done"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/main_400"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/answer_button_done"
            android:textColor="@color/system_white"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_medium"/>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>