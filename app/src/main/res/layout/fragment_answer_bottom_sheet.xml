<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".new_presentation.ui.mainNavigation.answer.AnswerBottomSheetFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:src="@drawable/n_ic_bottom_sheet_handle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingTop="14dp"
            android:clipToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/mcv_done_square">

            <LinearLayout
                android:id="@+id/ll_clear_focus_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_question_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@color/system_black"
                    android:fontFamily="@font/pretendard_regular"/>


                <TextView
                    android:id="@+id/tv_question_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@color/system_black"
                    android:fontFamily="@font/pretendard_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/answer_my_answer_deco"
                    android:textColor="@color/system_black"
                    android:fontFamily="@font/pretendard_regular"/>

                <EditText
                    android:id="@+id/et_my_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="top"
                    android:hint="@string/answer_my_answer_hint"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:textColor="@color/system_black"
                    android:textColorHint="@color/gray_400"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/answer_partner_answer_deco"
                    android:textColor="@color/system_black"
                    android:fontFamily="@font/pretendard_regular"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_partner_answer_state_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_partner_answer_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="16dp"
                        android:text="@string/answer_partner_answer_state_1"
                        android:textColor="@color/main_500"
                        android:textSize="18sp"
                        android:fontFamily="@font/pretendard_medium"/>
                </com.google.android.material.card.MaterialCardView>

                <EditText
                    android:id="@+id/et_partner_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:focusable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_marginHorizontal="20dp"
                    android:textColorHint="@color/gray_400"
                    android:textSize="18sp"
                    android:textColor="@color/system_black"
                    android:minLines="4"
                    android:gravity="top"
                    android:fontFamily="@font/pretendard_medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="59dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_done_round"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/tv_done_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/answer_button_done"
                android:textColor="@color/system_white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_done_square"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:visibility="gone"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/tv_done_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/answer_button_done"
                android:textColor="@color/system_white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</LinearLayout>