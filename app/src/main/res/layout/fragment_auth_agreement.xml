<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".new_presentation.ui.animatedSignUpNavigation.authAgreement.AuthAgreementBottomSheetFragment">

    <include layout="@layout/image_view_bottom_sheet_handle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/auth_agreement_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="6sp"
        android:letterSpacing="-0.01"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_agree_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/gray_300"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        app:rippleColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_agree_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="12dp"
                android:src="@drawable/n_ic_round_disagree"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center"
                android:text="@string/auth_agreement_agree_all"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_semi_bold"
                android:lineSpacingExtra="5sp"
                android:letterSpacing="-0.01"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/ll_agree_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32.5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_agree_check_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/n_ic_disabled_check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/auth_agreement_agree_prefix"
            android:textColor="@color/main_500"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>

        <TextView
            android:id="@+id/tv_agree_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_agreement_agree_1"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_agree_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32.5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_agree_check_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/n_ic_disabled_check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/auth_agreement_agree_prefix"
            android:textColor="@color/main_500"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>

        <TextView
            android:id="@+id/tv_agree_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_agreement_agree_2"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_agree_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32.5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_agree_check_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/n_ic_disabled_check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/auth_agreement_agree_prefix"
            android:textColor="@color/main_500"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>

        <TextView
            android:id="@+id/tv_agree_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_agreement_agree_3"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_agree_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32.5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_agree_check_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/n_ic_disabled_check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/auth_agreement_agree_prefix"
            android:textColor="@color/main_500"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>

        <TextView
            android:id="@+id/tv_agree_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_agreement_agree_4"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_done"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:rippleColor="@android:color/transparent">

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/n_background_button_main"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="5dp"
            android:text="@string/auth_agreement_done"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>