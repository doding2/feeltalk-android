<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_presentation.ui.animatedSignUpNavigation.AnimatedSignUpFragment">

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/n_ic_exit"
        android:visibility="visible"
        android:padding="12dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_exit"
        app:layout_constraintBottom_toBottomOf="@id/iv_exit"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/lpi_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:indicatorColor="@color/gray_500"
        android:progress="0"
        app:trackColor="@color/gray_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/ml_motion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutDescription="@xml/scene_sign_up"
        app:layout_constraintTop_toBottomOf="@id/lpi_process"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingTop="28dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="@string/sign_up_start_guide"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_medium"
            android:lineSpacingExtra="7dp"
            android:letterSpacing="-0.01"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
            android:id="@+id/ll_start_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintVertical_bias="0.32"
            app:layout_constraintTop_toBottomOf="@id/tv_guide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_start_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/n_background_sign_up"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_start_guide_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:text="@string/sign_up_start_guide_2"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/pretendard_regular"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="-0.01"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_start_button"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                app:cardBackgroundColor="@null"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:rippleColor="@android:color/transparent">

                <TextView
                    android:id="@+id/tv_start_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/n_background_button_main"
                    android:text="@string/sign_up_start_button"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:lineSpacingExtra="5dp"
                    android:letterSpacing="-0.01"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/gray_200"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/main_500"
            app:layout_constraintTop_toBottomOf="@id/tv_guide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="16dp"
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:background="@null"
                    android:hint="@string/sign_up_name_hint"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lines="1"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:letterSpacing="-0.01"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_name_clear"/>

                <ImageView
                    android:id="@+id/iv_name_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:paddingVertical="16dp"
                    android:src="@drawable/n_ic_clear"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_birth"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/gray_200"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/main_500"
            app:layout_constraintTop_toBottomOf="@id/mcv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_birth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="16dp"
                    android:layout_marginEnd="12dp"
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:background="@null"
                    android:hint="@string/sign_up_birth_hint"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lines="1"
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:letterSpacing="-0.01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_hyphen"/>

                <TextView
                    android:id="@+id/tv_hyphen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_birth_hyphen"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:letterSpacing="-0.01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_birth_gender"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_hyphen"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_birth_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/n_ic_sign_up_birth_gender_empty"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <EditText
                            android:id="@+id/et_gender"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="visible"
                            android:gravity="center"
                            android:background="@null"
                            android:textCursorDrawable="@drawable/edit_text_cursor"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:lines="1"
                            android:maxLength="1"
                            android:inputType="numberDecimal"
                            android:digits="0123456789"
                            android:imeOptions="actionNext"
                            android:letterSpacing="-0.01"
                            app:layout_constraintTop_toTopOf="@id/iv_birth_gender"
                            app:layout_constraintBottom_toBottomOf="@id/iv_birth_gender"
                            app:layout_constraintStart_toStartOf="@id/iv_birth_gender"
                            app:layout_constraintEnd_toEndOf="@id/iv_birth_gender"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/n_ic_sign_up_birth_unknown_digits" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/n_ic_sign_up_birth_unknown_digits" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/n_ic_sign_up_birth_unknown_digits" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/n_ic_sign_up_birth_unknown_digits" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/n_ic_sign_up_birth_unknown_digits" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/n_ic_sign_up_birth_unknown_digits" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_mobile_carrier"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:rippleColor="@android:color/transparent"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_400"
            app:layout_constraintTop_toBottomOf="@id/mcv_birth"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_mobile_carrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sign_up_mobile_carrier_1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.01"/>

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv_mobile_carrier_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/n_ic_spinner_arrow"
            app:layout_constraintTop_toTopOf="@id/mcv_mobile_carrier"
            app:layout_constraintBottom_toBottomOf="@id/mcv_mobile_carrier"
            app:layout_constraintEnd_toEndOf="@id/mcv_mobile_carrier"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_phone_number"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/gray_200"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/main_500"
            app:layout_constraintTop_toBottomOf="@id/mcv_birth"
            app:layout_constraintStart_toEndOf="@id/mcv_mobile_carrier"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="16dp"
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:background="@null"
                    android:hint="@string/sign_up_phone_number_hint"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lines="1"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:letterSpacing="-0.01"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_phone_number_clear"/>

                <ImageView
                    android:id="@+id/iv_phone_number_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:paddingVertical="16dp"
                    android:src="@drawable/n_ic_clear"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_agreement"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:rippleColor="@android:color/transparent"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_400"
            app:layout_constraintTop_toBottomOf="@id/mcv_mobile_carrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_agreement_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/n_ic_round_disagree" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sign_up_agreement"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.01"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_agreement_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/n_ic_next_gray_400" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:id="@+id/fl_agreement_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mcv_agreement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_agreement_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:visibility="visible"
                android:text="@string/sign_up_agreement_warning"
                android:textSize="12sp"
                android:textColor="@color/system_error"
                android:fontFamily="@font/pretendard_regular"
                android:letterSpacing="-0.01"/>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/gray_200"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/main_500"
            app:layout_constraintTop_toBottomOf="@id/fl_agreement_warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_auth_code_error_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/system_error">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_auth_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_auth_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="16dp"
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:background="@null"
                    android:hint="@string/sign_up_auth_code_request_hint"
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lines="1"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    android:imeOptions="actionDone"
                    android:letterSpacing="-0.01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_auth_code_button_actor"/>

                <TextView
                    android:id="@+id/tv_auth_code_button_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:text="@string/sign_up_auth_code_request_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:id="@+id/fl_auth_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/mcv_auth_code"
            app:layout_constraintBottom_toBottomOf="@id/mcv_auth_code"
            app:layout_constraintEnd_toEndOf="@id/mcv_auth_code">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_auth_code_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/main_500"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                app:strokeWidth="0dp"
                app:strokeColor="@color/black">

                <TextView
                    android:id="@+id/tv_auth_code_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/sign_up_auth_code_request_button"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:letterSpacing="-0.01"/>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_auth_code_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/mcv_auth_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_auth_code_warning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="12dp"
                android:text="@string/sign_up_auth_code_warning"
                android:textSize="12sp"
                android:textColor="@color/gray_500"
                android:fontFamily="@font/pretendard_regular"
                android:lineSpacingExtra="4sp"
                android:letterSpacing="-0.01"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_auth_code_timer"/>

            <TextView
                android:id="@+id/tv_auth_code_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:text="@string/sign_up_auth_code_timer"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                android:letterSpacing="-0.01"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_done_button"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@null"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:rippleColor="@android:color/transparent"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toBottomOf="@id/cl_auth_code_warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_done_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/n_background_button_main"
                android:text="@string/sign_up_auth_done_button"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="-0.01"/>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.motion.widget.MotionLayout>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_next_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:rippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:padding="12dp"
                android:text="@string/add_challenge_next"
                android:textColor="@color/main_500"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="-0.01"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>