<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/n_background_bottom_sheet_rounded"
    tools:context=".release_presentation.ui.mainNavigation.home.signal.SignalFragment">

    <include layout="@layout/image_view_bottom_sheet_handle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginTop="-2dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/signal_title"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_regular"
        android:lineSpacingExtra="7sp"
        android:letterSpacing="-0.01"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_signal_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="17dp"
        app:strokeColor="@color/signal_100"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tv_signal_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="9.5dp"
            android:text="@string/signal_percent_100"
            android:textColor="@color/signal_100"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="4dp"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_signal_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/signal_subtitle_100"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingTop="36dp"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/iv_track"
            android:layout_width="306dp"
            android:layout_height="225dp"
            android:adjustViewBounds="true"
            android:src="@drawable/n_ic_signal_slider_track"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_signal"
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:layout_marginTop="81dp"
            android:src="@drawable/n_image_home_signal_25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/n_ic_signal_pointer"
            app:layout_constraintTop_toTopOf="@id/iv_track"
            app:layout_constraintStart_toStartOf="@id/iv_track"
            app:layout_constraintEnd_toEndOf="@id/iv_track"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_signal_0"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="207dp"
            android:layout_marginStart="17dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray_400"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="@id/iv_track"
            app:layout_constraintStart_toStartOf="@id/iv_track"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_signal_25"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="69dp"
            android:layout_marginStart="27dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray_400"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="@id/iv_track"
            app:layout_constraintStart_toStartOf="@id/iv_track"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_signal_50"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray_400"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="@id/iv_track"
            app:layout_constraintStart_toStartOf="@id/iv_track"
            app:layout_constraintEnd_toEndOf="@id/iv_track"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_signal_75"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="27dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@null"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="@id/iv_track"
            app:layout_constraintEnd_toEndOf="@id/iv_track">

            <FrameLayout
                android:id="@+id/fl_signal_75_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_400"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_signal_100"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="207dp"
            android:layout_marginEnd="17dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray_400"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="@id/iv_track"
            app:layout_constraintEnd_toEndOf="@id/iv_track"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_send_signal"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:rippleColor="@android:color/transparent">

        <TextView
            android:id="@+id/tv_send_signal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/n_background_button_black"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/signal_send_button"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>