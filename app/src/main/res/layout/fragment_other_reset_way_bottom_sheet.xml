<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="12dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/n_ic_exit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/other_reset_way_title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_semi_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6dp"
        android:letterSpacing="-0.01"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_partner_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="#EEECF2"
        app:rippleColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/other_reset_way_partner_help_title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="-0.01"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_reset_way_partner_help_body"
                android:textColor="@color/gray_500"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="-0.01"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_send_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="#EEECF2"
        app:rippleColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/other_reset_way_send_email_title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="-0.01"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_reset_way_send_email_body"
                android:textColor="@color/gray_500"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="-0.01"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>