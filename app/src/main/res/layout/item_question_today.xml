<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/system_white"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_vertical"
            android:text="@string/question_title"
            android:textColor="@color/system_black"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_medium"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fl_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/main_500"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="139dp"
            android:layout_height="125dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/n_image_note_paper_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_index"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardBackgroundColor="@color/main_300"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/tv_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="100"
                        android:textColor="@color/main_500"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_bold" />
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/question_today_new"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_today_question_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="난 이게 가장 좋더라!"
                android:textColor="@color/system_white"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"/>

            <TextView
                android:id="@+id/tv_today_question_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신이 가장 좋아하는 스킨십은?"
                android:textColor="@color/system_white"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_medium"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_answer_or_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/system_black"
                app:cardCornerRadius="24dp"
                app:rippleColor="@color/system_alert">

                <TextView
                    android:id="@+id/tv_answer_or_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/question_today_button_answer"
                    android:textSize="16sp"
                    android:textColor="@color/system_white"
                    android:fontFamily="@font/pretendard_regular"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_list_title"
            android:textColor="@color/system_black"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_medium"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>