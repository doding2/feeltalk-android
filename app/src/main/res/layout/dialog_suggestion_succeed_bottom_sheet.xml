<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/n_background_bottom_sheet_rounded"
    android:orientation="vertical"
    android:elevation="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/suggestion_succeed_title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_semi_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6dp"
        android:letterSpacing="-0.01"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:src="@drawable/n_image_submit_succeed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:text="@string/suggestion_succeed_body"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="5dp"
        android:letterSpacing="-0.01"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_confirm"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:rippleColor="@android:color/transparent">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/n_background_button_black"
            android:text="@string/suggestion_succeed_confirm"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_medium"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"
            android:letterSpacing="-0.01"/>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>