<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/n_background_bottom_sheet_rounded"
    tools:context=".new_presentation.ui.mainNavigation.challenge.answer.AnswerFragment">

    <ImageView
        android:id="@+id/iv_dismiss_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:padding="12dp"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/n_ic_exit" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingTop="16dp"
            android:clipToPadding="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/mcv_done_square">

            <LinearLayout
                android:id="@+id/ll_clear_focus_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_question_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_regular"/>


                <TextView
                    android:id="@+id/tv_question_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/answer_my_answer_deco"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:fontFamily="@font/pretendard_semi_bold"/>

                <EditText
                    android:id="@+id/et_my_answer"
                    android:background="@drawable/n_background_edit_text_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="top"
                    android:hint="@string/answer_my_answer_hint"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_400"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/answer_partner_answer_deco"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:fontFamily="@font/pretendard_semi_bold"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_partner_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="visible"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_partner_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="16dp"
                        android:text="@string/answer_partner_answer_state_1"
                        android:textColor="@color/main_500"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_regular"/>
                </com.google.android.material.card.MaterialCardView>

                <EditText
                    android:id="@+id/et_partner_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:focusable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_marginHorizontal="20dp"
                    android:textColorHint="@color/gray_400"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    android:fontFamily="@font/pretendard_regular"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_partner_not_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="41dp">

                        <TextView
                            android:id="@+id/tv_partner_not_done"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/answer_partner_answer_state_2"
                            android:textColor="@color/gray_600"
                            android:textSize="16sp"
                            android:fontFamily="@font/pretendard_regular"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcv_press_for_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="24dp"
                            app:rippleColor="@color/system_alert">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp"
                                android:layout_marginHorizontal="16dp"
                                android:text="@string/answer_press_for"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_medium"/>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="59dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_done_round"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/tv_done_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/answer_button_done"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_done_square"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:visibility="gone"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="@color/main_500"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:rippleColor="@color/main_600"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/tv_done_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/answer_button_done"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_medium"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</LinearLayout>